<style>
    .marquee-announcement {
        display: none; /* Hidden by default */
        overflow: hidden;
        background: #660E36;
        padding: 5px 0;
        font-size: 14px;
        white-space: nowrap; /* Ensure content stays in one line */
    }

    /* Only visible for mobile and tablet */
    @media (max-width: 1024px) {
        .marquee-announcement {
            display: block;
        }
    }

    .marquee-wrapper {
        display: flex;
        animation: scroll 10s linear infinite; /* Smooth continuous scrolling */
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%); /* Move the items to the left */
        }
    }

    .marquee-item {
        display: inline-flex;
        align-items: center;
        margin-right: 40px; /* Spacing between items */
    }

    .marquee-icon {
        width: 24px;
        height: 24px;
        margin-right: 8px;
        object-fit: contain;
    }

    .marquee-placeholder-icon {
        font-size: 24px;
        margin-right: 8px;
        color: #999;
    }

    .marquee-link {
        color: #007acc;
        text-decoration: none;
        font-size: 14px;
    }

    .marquee-text {
        font-size: 14px;
        color: #fff;
      font-family: 'DM Sans';
    }
</style>

